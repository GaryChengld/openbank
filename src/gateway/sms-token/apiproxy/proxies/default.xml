<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>verify-api-key</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Create SMS Token">
            <Request>
                <Step>
                    <Name>Extract-Identifier</Name>
                </Step>
                <Step>
                    <Condition>identifier = "undefined" or identifier = null or identifier = ""</Condition>
                    <Name>Error-Invalid-identifier</Name>
                </Step>
                <Step>
                    <Name>Ext-Generate-Token</Name>
                </Step>
                <Step>
                    <Name>Populate-Cache-SMS-OTP-Cache</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>set-success-token-response</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/sms/{identifier}") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Verify SMS Token">
            <Description/>
            <Request>
                <Step>
                    <Name>Extract-Identifier</Name>
                </Step>
                <Step>
                    <Name>Lookup-Cache-SMS-OTP-Cache</Name>
                </Step>
                <Step>
                    <Condition>(token_value = null or token_value = "")</Condition>
                    <Name>Error-Invalid-SMS-OTP</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>Assign-SMS-Token-validation-response</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/sms/{identifier}/{token}") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/internal/apis/v1/otp</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <Condition>token = "undefined" or token = null or token = ""</Condition>
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
    <RouteRule name="nullTarget"/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
</ProxyEndpoint>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="Get-Payment-Request">
    <DisplayName>Get Payment Request</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="myRequest">
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
        <Set>
            <Headers>
                <Header name="x-apikey">{{internalAppKey}}</Header>
            </Headers>
            <Verb>GET</Verb>
        </Set>
    </Request>
    <Response>paymentreqResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>{{ edgeBasePath }}/apis/v2/payments-connector/payments/{PaymentId}</URL>
    </HTTPTargetConnection>
</ServiceCallout>
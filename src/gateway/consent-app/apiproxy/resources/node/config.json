{
  "base_path": "/apis/internal/v2/consentapp",
  "logo_uri": "/apis/internal/v2/consentapp/images/logo.png",
  "styles": {
    "header_background_color": "#FFF"
  },
  "consentTransaction": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/apis/v2/session/transactions/",
    "method": "GET",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "authenticationTransaction": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/connector/v1/authenticate",
    "method": "POST",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "accessTokenTransaction": {
    "transactionEndpoint": "{{ edgeBasePath }}/apis/v2/oauth/authorized/",
    "method": "POST",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "generateOtp": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/apis/v1/sms/otp/",
    "method": "POST",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "validateOtp": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/apis/v1/sms/otp/",
    "method": "POST",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "getAccounts": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/connector/v2/accounts",
    "method": "GET",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "getAccountRequest": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/connector/v2/accounts/accounts-requests",
    "method": "GET",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "getPaymentRequest": {
    "transactionEndpoint": "{{ edgeBasePath }}/apis/v2/payments-connector/payments/",
    "method": "GET",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "updatePaymentRequest": {
    "transactionEndpoint": "{{ edgeBasePath }}/apis/v2/payments-connector/payments/",
    "method": "PUT",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "updateAccountRequest": {
    "transactionEndpoint": "{{ edgeBasePath }}/internal/connector/v2/accounts/accounts-requests",
    "method": "PUT",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "createConsent": {
    "transactionEndpoint": "{{ edgeBasePath }}/apis/internal/v2/consent/",
    "method": "POST",
    "headers": {
      "x-apikey": "{{internalAppKey}}"
    }
  },
  "errors": {
    "user_cancel": {
      "code": "Consent_Rejected",
      "description": "User rejected consent"
    }
  },
  "loa": {
    "1": {
      "steps": [
        {
          "name": "OTP",
          "weight": 0,
          "path": "/otp"
        }
      ]
    },
    "2": {
      "steps": [
        {
          "name": "UID_PWD",
          "weight": 0,
          "path": "/login"
        }
      ]
    },
    "3": {
      "steps": [
        {
          "name": "UID_PWD",
          "weight": 0,
          "path": "/login"
        },
        {
          "name": "OTP",
          "weight": 1,
          "path": "/otp"
        }
      ]
    }
  }
}



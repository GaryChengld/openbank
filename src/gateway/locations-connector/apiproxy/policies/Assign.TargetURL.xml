<AssignMessage async="false" continueOnError="false" enabled="true" name="Assign.TargetURL">
    <AssignTo createNew="false" transport="http" type="request"/>
    <AssignVariable>
        <Name>appBasePath</Name>
        <Value>https://api.usergrid.com/{{ baas_org }}/{{ baas_app }}</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</AssignMessage>
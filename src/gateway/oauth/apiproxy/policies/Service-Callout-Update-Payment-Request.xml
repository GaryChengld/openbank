<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="Service-Callout-Update-Payment-Request">
    <DisplayName>Service Callout Update Payment Request</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="myPaymentRequest">
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
        <Set>
            <Headers>
            <Header name="x-apikey">{{ internalAppKey }}</Header>
        </Headers>
            <Verb>PUT</Verb>
            <Payload contentType="application/json">{"Status": "Authorised"}</Payload>
        </Set>
    </Request>
    <Response>requestIdResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>{{ edgeBasePath }}/apis/v2/payments-connector/payments/{RequestId}</URL>
    </HTTPTargetConnection>
</ServiceCallout>